<main class="d-flex flex-column justify-content-center align-items-center flex-grow-1">
    <h1 class="p-5">{{title}}</h1>
    <form class="d-flex flex-column justify-content-center align-items-center w-50" id="registerForm">
        <fieldset class="mb-2 w-100">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name" />
        </fieldset>
        <fieldset class="mb-2 w-100">
            <label for="photo" class="form-label">URL photo</label>
            <input type="text" class="form-control" name="photo" id="photo" />
        </fieldset>
        <fieldset class="mb-2 w-100">
            <label for="age" class="form-label">Age</label>
            <input type="number" class="form-control" name="age" id="age" />
        </fieldset>
        <fieldset class="mb-2 w-100">
            <label for="mail" class="form-label">Email</label>
            <input type="email" class="form-control" name="mail" id="email" />
        </fieldset>
        <fieldset class="mb-2 w-100">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="password" />
        </fieldset>
        <div class="d-flex justify-content-between w-100">
            <input type="button" id='register' class="btn btn-danger mt-2  w-100" value="Register!">
        </div>
    </form>
</main>